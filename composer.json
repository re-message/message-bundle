{
    "name": "relmsg/message-bundle",
    "description": "Relations Messenger Message Standard Bundle for Symfony",
    "type": "symfony-bundle",
    "license": "Apache-2.0",
    "homepage": "https://dev.relmsg.ru/packages/message-bundle",
    "authors": [
        {
            "name": "Oleg Kozlov",
            "email": "h1karo@relmsg.ru",
            "homepage": "https://rel.ms/h1karo",
