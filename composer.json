    "require-dev": {
        "symfony/browser-kit": "^6.0",
        "symfony/phpunit-bridge": "^6.0",

        "roave/security-advisories": "dev-latest"
    },
    "config": {
        "sort-packages": false
    },
    "scripts": {
        "test": "simple-phpunit"
    }
